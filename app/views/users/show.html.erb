<div class="container px-5 px-sm-0">
<div class="row">
  <div class="col-md-3">
   <%= render "info", user: @user %>
   <%= render 'books/form', book: Book.new %>
  </div>

<!-- ユーザーの投稿一覧 -->

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
      <td><%= image_tag url_for(@user.profile_image), size:'80x80'%></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
　　  <td><%= link_to book.body, book_path(book.id) %></td>
　　  </tr>
  <% end %>
    </tbody>
  </table>

    </div>
  </div>
</div>
