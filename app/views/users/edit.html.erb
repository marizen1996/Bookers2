
<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">


 <h2>User info</h2>
 <%= form_with model:@user do |f| %>


  <div class="form-group">
   <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name", class: "form-control" %>
  </div>

 <div class="form-group">
  <label for="inputImage">Image</label>
 <p>
   <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
 </p>
 </div>

<div class="form-group">
  <label for="user_introduction">Introduction</label>
  <p>
  <%= f.text_area :introduction, autofocus: true, id:"user_introduction", placeholder:"", class: "form-control" %>
</p>
</div>

 <%= f.submit "Update User" %>
 <% end %>
  </div>

</div>
</div>
</div>