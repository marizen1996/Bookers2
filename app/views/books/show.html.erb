<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">


<%= render "users/info", user: @user %>
<%= render 'books/form', book: Book.new %>


  </div>


<!--詳細画面-->

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>

<table class="table">
<tbody>


 <td><%= image_tag url_for(@user.profile_image), size:'80x80' %>
<%=link_to @user.name ,user_path(current_user.id) %></td>


<td><%= @book.title %></td>

<td><%= @book.body %></td>
<td>
<%= link_to "edit", edit_book_path(@book.id),class: "btn btn-success" %>
</td>
<td>
<%= link_to "destroy", book_path(@book.id),method: :delete, "data-confirm" => "本当に削除しますか",class: "btn btn-danger" %>
</td>

</tbody>
</table>
</div>