<!--/books 一覧画面-->
　<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: @user %>
      <%= render 'books/form', book: Book.new %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag url_for(book.user.profile_image), size:'80x80' %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
