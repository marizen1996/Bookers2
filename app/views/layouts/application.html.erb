<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/05207b6c84.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

   <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Bookers</a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">


    <% if user_signed_in? %>
      <div class="d-flex align-items-center">
      <a class="nav-item text-light">
        <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
        <i class="fa-solid fa-house"></i> Home
        <% end %>
      </a>
      <!--%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>-->
              <!--<i class="fa-solid fa-house"></i>-->
              <!--%= link_to "Home", user_session_path, class: 'nav-link text-light'  %>-->
       <div class="d-flex align-items-center">
       <a class="nav-item text-light">
         <%= link_to users_path, class: 'nav-link text-light' do %>
         <i class="fa-solid fa-users"></i> Users
         <% end %>
         </a>
            <!--  <i class="fa-solid fa-users"></i>-->
            <!--  %= link_to "Users", users_path, class: 'nav-link text-light' %>-->
       <a class="nav-item text-light">
          <%= link_to books_path, class: 'nav-link text-light' do %>
          <i class="fa-solid fa-book-open"></i> Books
          <% end %>
       </a>

       <a class="nav-item text-light">
        <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
        <i class="fa-solid fa-right-from-bracket"></i> Log out
        <% end %>
       </a>
      </div>

      <% else %>
       <div class="d-flex align-items-center">
         
          <a class="nav-item text-light">
          <% link_to root_path, class: 'nav-link text-light' do %>
          <i class= "fa-solid fa-house"></i> Home
          <% end %>
          </a>
        
        <a class="nav-item text-light">
        <%= link_to about_path, class: 'nav-link text-light' do %>
        <i class="fa-solid fa-link"></i> About
        <% end %>
       </a>

       <a class="nav-item text-light">
        <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
        <i class="fa-solid fa-user-plus"></i> sign up
        <% end %>
        </a>

        <a class="nav-item text-light">
        <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
        <i class="fa-solid fa-right-to-bracket"></i> Log_in
        <% end %>
        </a>
        
      <% end %>
        </div>
      </header>

      <main>
      <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>

