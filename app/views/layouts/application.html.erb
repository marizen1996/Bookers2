<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/05207b6c84.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


    </head>



  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Bookrs</a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">


    <% if user_signed_in? %>
      <div class="d-flex align-items-center">
      <a class="nav-item text-light">
              <i class="fa-solid fa-house"></i>
              <%= link_to "Home", user_session_path, class: 'nav-link text-light' %>
            </a>
                               <!--user_path(current_user.id)-->

      <div class="d-flex align-items-center">
      <a class="nav-item text-light">
              <i class="fa-solid fa-users"></i>
              <%= link_to "Users", users_path, class: 'nav-link text-light' %>
            </a>


      <a class="nav-item text-light">
              <i class="fa-solid fa-book-open"></i>
              <%= link_to "Book", books_path, class: 'nav-link text-light' %>
            </a>


      <a class="nav-item text-light">
               <i class="fa-solid fa-right-from-bracket"></i>
              <%= link_to "log out", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
            </a>
      </div>

    <% else %>
    <div class="d-flex align-items-center">
     <a class="nav-item text-light">
              <i class="fa-solid fa-house"></i>
              <%= link_to "Home", root_path, class: 'nav-link text-light' %>
            </a>
      <a class="nav-item text-light">
              <i class="fa-solid fa-link"></i>
              <%= link_to 'About', about_path, class: 'nav-link text-light' %>
            </a>

       <a class="nav-item text-light">
              <i class="fa-solid fa-user-plus"></i>
              <%= link_to "sign_up", new_user_registration_path, class: "nav-link text-light" %>
            </a>

        <a class="nav-item text-light">
              <i class="fa-solid fa-right-to-bracket"></i>
              <%= link_to "sign_in", new_user_session_path, class: 'nav-link text-light' %>
              </a>
        </div>

    <% end %>

    </header>
   <main>
    <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>
     
     
      <!--% if user_signed_in? %>-->
      <!--% flash.each do |message| %>-->
      <!-- <div class="flash-message notice">welcome! you have signed up successfully.</div>-->
      <!--% end %>-->
      <!--% end %>-->
      
      <!-- % if user_signed_out? %>-->
      <!--% flash.each do |message| %>-->
      <!-- div class="flash-message notice">Signed out successfully.</div>-->
      <!--% end %>-->
      <!--% end %>-->
      
      <%= yield %>
    </main>


    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

    </body>
    </html>