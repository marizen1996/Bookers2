      <!--% flash.each do |message| %>-->
      <!-- div class="flash-message notice">Signed out successfully.</div>-->
      <!--% end %>-->
      <!--% end %>-->
    </main>


    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

    </body>
    </html>